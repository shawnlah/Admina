{    
  "compilerOptions": {        
    "module": "commonjs",
    "esModuleInterop": true,        
    "target": "es6",
    "noImplicitAny": false,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",     
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"            
      ]
    }  
  },
  "include": [ "src/**/*" ],
  "exclude": ["node_modules"]
}
